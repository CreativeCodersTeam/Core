@using BlazorWebAssemblySampleApp.ViewModels
@inherits LayoutComponentBase
@inject TestViewModel ViewModel

<div class="sidebar">
    <NavMenu/>
</div>

<div class="main">
    <div class="top-row px-4 auth">
        <LoginDisplay/>

        <ViewModelArea TViewModel="TestViewModel" ViewModel="@ViewModel" ObserveProperties="Text">
            <div>@ViewModel.Text</div>
        </ViewModelArea>

        <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>
